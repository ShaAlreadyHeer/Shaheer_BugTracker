@model Shaheer_BugTracker.Models.LoginRegisterViewModel

@{
    ViewBag.Title = "Login";
    //Layout = null;
}
<section>
    <!-- login Start-->
    <div class="login-form-area mg-t-30 mg-b-40">
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="logo">
                                    <a href="#">
                                        <img src="~/Images/logo.png" alt="" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <br /><br />
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                        <p>E-mail</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(m => m.LoginVM.Email, new { @class = "form-control", placeholder = "Email Address" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                        <p>Password</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.PasswordFor(m => m.LoginVM.Password, new { @class = "form-control", placeholder = "Password" })
                                        <i class="fa fa-lock login-user"></i>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="forgot-password">
                                                <button>@Html.ActionLink("ForgotPassword", "ForgotPassword")</button>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="login-keep-me">
                                                <label class="checkbox">

                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="login-button-pro">
                                        <div class="col-lg-4">
                                            <button type="submit" class="login-button login-button-lg">Log in</button>
                                        </div>
                                        <div class="col-lg-4">
                                            <button class="btn login-button login-button-lg">@Html.ActionLink("Register","Register", "Account")</button>
                                        </div>
                                        <div class="col-lg-4">
                                            <button class="btn login-button login-button-lg">@Html.ActionLink("Demo Users", "DemoUser", "Home")</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
    </div>
    <!-- login End-->
    <!-- Footer Start-->
    <div class="footer-copyright-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer-copy-right">
                        <p>Copyright &#169; 2018 Colorlib All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End-->

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
