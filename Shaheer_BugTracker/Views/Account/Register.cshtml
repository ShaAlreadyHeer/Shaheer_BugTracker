@model Shaheer_BugTracker.Models.LoginRegisterViewModel


@{
    ViewBag.Title = "Register";
}

@Html.AntiForgeryToken()
    <section>
        <!-- Breadcome start-->
        <div class="breadcome-area mg-t-40">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcome-list shadow-reset">
                            <div class="breadcome-heading">
                                <h2>Registration Form</h2>
                            </div>
                            <ul class="breadcome-menu">
                                <li>
                                    <a href="#">Home</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <a href="#">Graphs</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <span class="bread-blod">Registration Form</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcome End-->
        <!-- Register Start-->
        <div class="login-form-area mg-t-30 mg-b-40">
            <div class="container">
                <div class="row">
                        <div class="col-lg-6">
                            <div class="login-bg">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="logo">
                                            <a href="#">
                                                <img src="img/logo/logo.png" alt="" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="login-title">
                                            <h1>Registration Form</h1>
                                        </div>
                                    </div>
                                </div>

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>Full Name</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="login-input-area register-mg-rt">
                                                    @Html.TextBoxFor(m => m.RegisterVM.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                                    <i class="fa fa-user login-user"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="login-input-area">
                                                    @Html.TextBoxFor(m => m.RegisterVM.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                                    <i class="fa fa-user login-user"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>Username</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(m => m.RegisterVM.Email, new { @class = "form-control", placeholder = "Email" })
                                            <i class="fa fa-user login-user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>Email Address</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(m => m.RegisterVM.Email, new { @class = "form-control", placeholder = "Email" })
                                            <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>Password</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(m => m.RegisterVM.Password, new { @class = "form-control", placeholder = "Password" })
                                            <i class="fa fa-lock login-user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>Confirm Password</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(m => m.RegisterVM.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                            <i class="fa fa-lock login-user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-8">
                                        <div class="login-keep-me register-check">
                                            <label class="checkbox">
                                                <input type="checkbox" name="remember" checked><i></i>Send a copy to my e-mail address
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-8">
                                        <div class="login-keep-me register-check">
                                            <label class="checkbox">
                                                <input type="checkbox" name="remember" checked><i></i>I want to receive news and special offers
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-8">
                                        <div class="login-button-pro">
                                            <button type="submit" value="Register" class="btn btn-success">Register</button>
                                            @*<button type="submit" class="login-button login-button-lg">Register</button>*@
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <!-- Register End-->
        <!-- Footer Start-->
        <div class="footer-copyright-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-copy-right">
                            <p>Copyright &#169; 2018 Colorlib All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End-->
        <!-- jquery
    ============================================ -->
        <script src="~/Scripts/jquery-1.11.3.min.js"></script>
        <!-- bootstrap JS
    ============================================ -->
        <script src="~/Scripts/bootstrap.min.js"></script>
        <!-- meanmenu JS
    ============================================ -->
        <script src="~/Scripts/jquery.meanmenu.js"></script>
        <!-- mCustomScrollbar JS
    ============================================ -->
        <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js"></script>
        <!-- sticky JS
    ============================================ -->
        <script src="~/Scripts/jquery.sticky.js"></script>
        <!-- scrollUp JS
    ============================================ -->
        <script src="~/Scripts/jquery.scrollUp.min.js"></script>
        <!-- form validate JS
    ============================================ -->
        <script src="~/Scripts/jquery.form.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/form-active.js"></script>
        <!-- main JS
    ============================================ -->
        <script src="~/Scripts/main.js"></script>

    </section>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
