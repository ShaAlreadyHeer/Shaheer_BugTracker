<div class="row">
    <div>
        @using (Html.BeginForm("Create", "TicketComments", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("TicketId", Model.Id)
            <div class="row">
                <div class="offset-3 col-md-6">
                    @Html.TextArea("Comment", new { rows = 5, cols = 50, placeholder = "Add Comment" })
                </div>
            </div>
            <div class="row">
                <div class="offset-3 col-md-6">
                    <button type="submit" class="btn btn-sm btn-dark">Add</button>
                </div>
            </div>
        }
    </div>
    <div>
    @foreach (var comment in Model.TicketComments)
    {
        <div class="container mt-3">
            <h3>@comment.User</h3>
            <div class="media">
                <img src="~/Images/" class="align-self-start mr-3" style="width:60px" />
                <div class="media-body">
                    <h4>Written: @comment.Created.ToString("MMM dd, yyyy")</h4>
                    <p>@comment.Comment</p>
                </div>
            </div>
        </div>
    }
    </div>

    @using (Html.BeginForm("Create","TicketAttachments",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("TicketId",Model.Id)

        @Html.Label("Ticket Attachment", htmlAttributes: new { @class = "control-label col-md-2"})
   
            <input type="file" name="image" class="form-control" />
            @Html.ValidationMessage("Attach.Filepath", "", new { @class ="text-danger"})
       
        <button type="submit" class="btn btn-sm btn-primary">Add Attachment</button>
    }
    <div class="form-group">
        @foreach (var attach in Model.TicketAttachments)
        {
            <a href=@Url.Content(attach.FilePath) target="_blank">@attach.FilePath.Split('/')[2]</a>
        }
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
